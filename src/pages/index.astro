---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
  <Header />
  <!-- Hero Slider -->
  <div class="hero-slider relative">
    <div class="slider-container overflow-hidden">
      {
        (
          <div class="slide relative min-h-[600px]">
            <img
              src="fotos/jordan.png"
              alt="foto"
              class="absolute inset-0 w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-black bg-opacity-40">
              <div class="container mx-auto px-4 h-full flex items-center" />
            </div>
          </div>
        )
      }
    </div>
  </div>

  <!-- Categorías Destacadas -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">
        Categorías Destacadas
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          (
            <a href="" class="group">
              <div class="relative overflow-hidden rounded-lg">
                <img
                  src=""
                  alt=""
                  class="w-full h-64 object-cover transform group-hover:scale-105 transition duration-300"
                />
                <div class="absolute inset-0 bg-black bg-opacity-30 flex items-center justify-center">
                  <h3 class="text-white text-2xl font-bold" />
                </div>
              </div>
            </a>
          )
        }
      </div>
    </div>
  </section>

  <!-- Productos Destacados -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">Productos Destacados</h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        {
          (
            <div class="group">
              <div class="relative overflow-hidden rounded-lg mb-4">
                <img
                  src=""
                  alt=""
                  class="w-full h-72 object-cover transform group-hover:scale-105 transition duration-300"
                />
                <div class="absolute top-4 left-4">
                  <span class="bg-white px-3 py-1 rounded-full text-sm" />
                </div>
              </div>
              <h3 class="text-lg font-semibold mb-2" />
              <p class="text-gray-600" />
            </div>
          )
        }
      </div>
    </div>
  </section>

  <!-- Banner Promocional -->
  <section class="bg-black text-white py-20">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold mb-6">¡Únete a nuestra newsletter!</h2>
      <p class="text-xl mb-8">
        Recibe las últimas novedades y ofertas exclusivas
      </p>
      <form class="max-w-md mx-auto flex gap-4">
        <input
          type="email"
          placeholder="Tu email"
          class="flex-1 px-4 py-3 rounded-full text-black"
        />
        <button
          type="submit"
          class="bg-white text-black px-8 py-3 rounded-full hover:bg-gray-100 transition"
        >
          Suscribirse
        </button>
      </form>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  .hero-slider {
    height: 600px;
  }

  .slider-container {
    height: 100%;
  }

  .slide {
    height: 100%;
  }
</style>
